{   
    propertyEditors: [    
        {
            alias: "Spectrum.Color.Picker",
            name: "Spectrum Color Picker",
            editor: {
                view: "~/App_Plugins/SpectrumColorPicker/SpectrumColorPicker.html"
            },
			prevalues: {
				fields: [
				{
					label: "Enable Transparency",
					key: "enableTransparency",
					view: "boolean"
				},
				{
					label: "Preferred Format",
					description: "Choose what format the color should be selected/displayed in. Rgb is automatic selected if transparency is selected.",
					key: "prefferedFormat",
					view: "~/App_Plugins/SpectrumColorPicker/lib/prevalue/prefferedFormat.html"
				}
				]
			},
			defaultConfig: {
				enableTransparency: "0",
				prefferedFormat: "hex"
			}
        }
    ]
    ,
    javascript: [
        "~/App_Plugins/SpectrumColorPicker/SpectrumColorPicker.controller.js"
    ]
    ,
    css: [
        "~/App_Plugins/SpectrumColorPicker/lib/spectrum/spectrum.css"
    ]
}
